# ==============================
# Docker Compose Runtime Config
# ==============================

# ---------- Database (SQLite default) ----------
DATABASE_TYPE=sqlite

# SQLite file path relative to backend app root inside container
SQLITE_DB_PATH=data/aws_architect.db

# Host path for persistent SQLite data (external to containers)
# Windows example: D:/aws-archetect-data/sqlite
# Linux example: /srv/aws-archetect/sqlite
SQLITE_DATA_PATH=./docker-data/sqlite

# ---------- Optional PostgreSQL (migration/legacy only) ----------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=auth_db
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Host-exposed DB port -> postgres container 5432 (only when postgres profile is used)
DB_HOST_PORT=5433

# ---------- Backend ----------
# Internal backend container port is fixed to 8805.
# You can change host-exposed port here.
BACKEND_HOST_PORT=8805

OLLAMA_BASE_URL=http://host.docker.internal:11434/v1
OLLAMA_MODEL=qwen2.5

# ---------- Frontend ----------
# Internal frontend container port is fixed to 3030.
# You can change host-exposed port here.
FRONTEND_HOST_PORT=3030

# Browser-visible API endpoint (set this to your deployed backend URL)
# For local Docker this default works with BACKEND_HOST_PORT.
VITE_API_URL=http://localhost:8805
VITE_API_FALLBACK_URL=http://localhost:8805
